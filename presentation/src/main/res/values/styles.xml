<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Theme colors. -->
        <item name="colorPrimary">@color/colorPurple</item>
        <item name="colorPrimaryDark">@color/colorPurple</item>
        <item name="colorAccent">@color/colorOrange</item>

        <item name="colorPrimaryVariant">@color/colorPurple</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorPrimarySurface">@color/colorPurple</item>
        <item name="colorOnPrimarySurface">@color/colorWhite</item>

        <item name="colorSurface">@color/colorWhite</item>
        <item name="colorOnSurface">@color/colorGray</item>

        <item name="colorSecondary">@color/colorOrange</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <item name="colorSecondaryVariant">@color/colorOrange</item>

        <item name="colorError">@color/colorRed</item>
        <item name="colorOnError">@color/colorWhite</item>

        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="colorOnBackground">@color/colorGraphite</item>

        <item name="colorControlNormal">@color/colorPitchDark</item>
        <item name="colorControlActivated">@color/colorPurple</item>
        <item name="colorControlHighlight">@color/colorPurple</item>
    </style>

</resources>