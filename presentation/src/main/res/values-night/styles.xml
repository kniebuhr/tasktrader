<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <!-- Theme colors. -->
        <item name="colorPrimary">@color/colorLilac</item>
        <item name="colorPrimaryDark">@color/colorPurple</item>
        <item name="colorAccent">@color/colorLilac</item>

        <item name="colorPrimaryVariant">@color/colorLilac</item>
        <item name="colorOnPrimary">@color/colorPitchDark</item>
        <item name="colorPrimarySurface">@color/colorLilac</item>
        <item name="colorOnPrimarySurface">@color/colorPitchDark</item>

        <item name="colorSurface">@color/colorPitchDark</item>
        <item name="colorOnSurface">@color/colorSnow</item>

        <item name="colorSecondary">@color/colorYellow</item>
        <item name="colorOnSecondary">@color/colorPitchDark</item>
        <item name="colorSecondaryVariant">@color/colorYellow</item>

        <item name="colorError">@color/colorSalmon</item>
        <item name="colorOnError">@color/colorPitchDark</item>

        <item name="android:windowBackground">@color/colorPitchDark</item>
        <item name="android:colorBackground">@color/colorPitchDark</item>
        <item name="colorOnBackground">@color/colorSnow</item>

        <item name="colorControlNormal">@color/colorSnow</item>
        <item name="colorControlActivated">@color/colorLilac</item>
        <item name="colorControlHighlight">@color/colorLilac</item>

    </style>

</resources>